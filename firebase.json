{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "public": "",
      "ignore": [
        "firebase.json",
        ".firebaserc",
        ".vscode",
        ".git",
        ".gitignore",
        ".editorconfig",
        "src/**/.*",
        "database.rules.json",
        "package.json",
        "README.md",
        "tsconfig.json",
        "webpack.config.js",
        "yarn.lock",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "FitnessApp",
      "public": "dist/fitness-app",
      "ignore": [
        "**/.*"
      ],
      "headers": [
        {
          "source": "*.[0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f].+(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}